{
    "servers": [
        {
            "host": "localhost",
            "port": "env:PORT|d",
            "options": {
                "payload": {
                    "maxBytes": 10000000
                }
            }
        },
        {
            "host": "localhost",
            "port": "env:SSL_PORT|d",
            "options": {
                "tls": {
                    "requestCert": true,
                    "rejectUnauthorized": true,
                    "key": "file:../key.pem",
                    "cert": "file:../cert.pem"
                },
                "payload": {
                    "maxBytes": 10000000
                }
            }
        }
    ],
    "plugins": {
        "kappa": {
            "vhost": "npm.myorg.com",
            "paths": [
                "http://localhost:5984/registry/_design/app/_rewrite/",
                "https://registry.npmjs.org/"
            ]
        },
        "good": {
            "reporters":  [{
                "reporter": "require:good/lib/reporter",
                "args": [{
                    "events": {
                        "request": "*",
                        "log": "*",
                        "error": "*",
                        "ops": "*"
                    }
                }]
            }]
        }
    }
}
