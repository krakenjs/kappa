{
    "servers": [
        {
            "host": "localhost",
            "port": 8000
        },
        {
            "host": "localhost",
            "port": 8443,
            "options": {
                "tls": {
                    "requestCert": true,
                    "rejectUnauthorized": true,
                    "key": "file:../key.pem",
                    "cert": "file:../cert.pem"
                }
            }
        }
    ],
    "plugins": {
        "kappa": {
            "vhost": "npm.myorg.com",
            "paths": [
                "http://localhost:5984/registry/_design/app/_rewrite/",
                "https://registry.npmjs.org/"
            ]
        }
    }
}
